<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>

    <class name = "com.ideas2it.employeeinformation.address.model.Address" table = "Address">

        <id name = "id" type = "int" column = "addressid">
            <generator class="increment"/>
        </id>
        <property name = "doorNumber" column = "doornumber" type = "int"/>
        <property name = "streetName" column = "streetname" type = "string"/>
        <property name = "city" column = "city" type = "string"/>
        <property name = "state" column = "state" type = "string"/>
        <property name = "country" column = "country" type = "string"/>
        <property name = "pincode" column = "pincode" type = "long"/>
        <property name = "addressType" column = "addresstype" type = "string"/>
        <property name="clientId" column="clientid"/>
        <property name="employeeId" column="employeeid"/>
    </class>

</hibernate-mapping>
